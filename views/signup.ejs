                    <input type="password" name="password2" id="password2" class="signup-int" maxlength="20" minlength="8" required>
                </span>
                <span class="error_next_box"></span>
            </div>

            <!-- NAME -->
            <div>
                <h3 class="join_title"><label for="name">이름</label></h3>
                <span class="signup-box int_name">
                    <input type="text" name="name" id="name" class="signup-int" maxlength="20" required>
                </span>
                <span class="error_next_box"></span>
            </div>
            <div>
                <h3 class="join_title"><label for="phoneNo">닉네임</label></h3>
