        <div id="signup-content">
            <!-- ID -->
            <div>
                <h3 class="join_title">
                    <label for="id">아이디</label>
                </h3>
                <span class="signup-box int_id">
                    <input type="text" name="user_id" id="user_id" class="signup-int" maxlength="20" minlength="5" placeholder="영소문자와 숫자만 사용 가능, 5자 이상" required>
                    <span class="step_url"></span>
                </span>
                <span class="error_next_box"></span>
            </div>

            <!-- PW1 -->
            <div>
                <h3 class="join_title"><label for="pswd1">비밀번호</label></h3>
                <span class="signup-box int_pass">
                    <input type="password" name="password" id="password" class="signup-int" maxlength="20" minlength="8" placeholder="영소문자와 숫자 1자 이상 반드시 포함, 8자 이상" required>
                    <span class="step_ps_url"></span>
                    <span id="alertTxt">사용불가</span>
                    
                </span>
                <span class="error_next_box"></span>
            </div>

