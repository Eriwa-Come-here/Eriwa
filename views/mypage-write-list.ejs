<div class="writeList-container">
  <div id="writeBig-container">
    <div class="write-wrapped">
      <div class="user_container">
        <div class="user_info">
          <a href=""><img id="profile" src="../public/images/profile_icon.png" alt="profile_icon"/></a>
          <br />
          <p><%= currentUser.nickname %></p>
          <br />
          <div id="img_message">
            <a href="/note/receive">
              <img src="../public/images/message_icon.png" alt="message_icon" />
              <p>쪽지함</p>
            </a>
          </div>
        </div>
        <div class="user_detail">
          <div class="detail_constant">
            <a href="<%=`/mypage/post`%>"><p>・ 작성한 글</p></a>
            <a href="<%=`/mypage/comment`%>"><p>・ 작성한 댓글</p></a>
            <a href="<%=`/mypage`%>"><p>・ 추천한 글</p></a>
            <a href="<%=`/mypage/update`%>"><p>・개인정보수정</p></a>
          </div>
        </div>
      </div>
      <div class="write_container">
        <div class="write_detail">
          <div class="write_kind">
            <div class="mypage_nav">
              <span class="mypage_nav_span"><a href="/mypage">추천한 글</a></span>
              <span class="mypage_nav_span mypage_nav_choice"><a href="/mypage/post">내가 쓴 글</a></span>
              <span class="mypage_nav_span"><a href="/mypage/comment">내가 쓴 댓글</a></span>
            </div>
            <div>
              <div class="mypage_content">
                <table class="mypage_post_table">
                  <thead>
                    <tr>
                      <th scope="cols">글번호</th>
                      <th scope="cols">글제목</th>
                      <th scope="cols">조회수</th>
                      <th scope="cols">댓글수</th>
                      <th scope="cols">작성일자</th>
                      <th scope="cols"></th>
                    </tr>
                  </thead>
                  <tbody>
                    <% post.forEach(post => { %>
                    <tr>
                      <td><%= post.post_id %></td>
                      <td><a href="<%=`/board/post-view/${post.post_id}`%>"><%= post.title %></a></td>
                      <td><%= post.view_count %></td>
                      <td><%= post.commentCount %></td>
                      <td><%= getDate(post.written_date) %></td>
                      <td>
                        <form onsubmit="return confirm('게시글을 삭제하시겠습니까?');" action="<%=`/mypage/post/delete`%>" method="post">
                          <input type="hidden" name="post_id" value="<%= post.post_id %>"/>
                          <button type="submit" class="mypage_del_btn" name="Delete">삭제</button>
                        </form>
                      </td>
                    </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
