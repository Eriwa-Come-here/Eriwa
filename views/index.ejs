<div id="container">
    <div id="today_best">
        <h2>오늘의 이리와</h2>
        <section class="today_best_slider">
            <div class="today_best_contents">
                <% post.forEach(p => { %>
                    <div class="contents_img"><img src="<%= `/public/images/${p.image}` %>" alt="메인 사진"></div>
                    <div class="contents_detail">
                        <a href="<%= `/${p.image}` %>">
                        <div class="contents_explain">
                            <h1><%= p.title %></h1>
                            <h4><%= p.address1 %></h4>
                            <h5><%= p.user_id %></h5>
                            <p><%= p.content %></p>
                        </div></a>
                        <div class="contents_info">
                            <a href="<%= `/${p.image}` %>">
                                <div class="btn_jjim">
                                    <img src="/public/images/jjim_icon.png" alt="찜">
                                    <p>2,100</p>
                                </div>
                            </a>
                            <a href="<%= `/${p.image}` %>">
                                <div class="btn_comment">
                                    <img src="/public/images/comment_icon.png" alt="댓글">
                                    <p>100</p>
                                </div>
                            </a>
                            <a href="<%= `/${p.image}` %>">
                                <div class="btn_grade">
                                    <img src="/public/images/grade_icon.png" alt="별점">
                                    <p><%= p.grade %></p>
                                </div>
                            </a>
                        </div>
                    </div>
                <% }); %>
            </div>
        </section>
