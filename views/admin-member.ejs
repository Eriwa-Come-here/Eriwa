<div class="main-div">
  <div class="main-sidemenu">
    <ul class="menu-ul">
      <li>
        <a href="/admin/member" class="sidemenu-style"> 회원관리</a>
      </li>
      <li>
        <a href="/admin/post" class="sidemenu-style"> 게시글관리</a>
      </li>
      <li>
        <a href="/admin/qna" class="sidemenu-style"> 문의내역</a>
      </li>
    </ul>
  </div>
  <div class="main-contents">
    <div class="subject">전체 회원</div>
    <div>
      <table class="table-style">
        <thead>
          <tr>
            <th scope="cols">회원명</th>
            <th scope="cols">회원아이디</th>
            <th scope="cols">게시글수</th>
            <th scope="cols">이메일</th>
            <th scope="cols">생년월일</th>
            <th scope="cols">성별</th>
            <th scope="cols"></th>
          </tr>
        </thead>
        <tbody>
          <% user.forEach(user => { %>
          <tr>
            <td scope="row"><%= user.name %></td>
            <td><%= user.user_id %></td>
            <td><%= user.count %></td>
            <td><%= user.email %></td>
            <td><%= user.birthdate %></td>
            <td><%= user.gender %></td>
            <td>
              <form onsubmit="return confirm('회원을 삭제하시겠습니까?');" action="<%=`/admin/member/delete`%>" method="post">
                <input type="hidden" name="user_id" value="<%= user.user_id %>" />
                <button type="submit" name="Delete" value="Delete">삭제</button>
              </form>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>
