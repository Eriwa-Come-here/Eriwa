                        <%} else { %>
                        <div class="img_main"><img src="<%= `/public/uploadFiles/${p.image}` %>" alt="메인 사진"></div>
                        <%} %>
                        
                        <div class="contents_info" id="info_2">
                            <a href="<%= `/board/post-view/${p?.post_id}` %>">
                                <div class="btn_jjim">
                                    <img src="/public/images/jjim_icon.png" alt="찜">
                                    <p>2,100</p>
                                </div>
                            </a>
                            <a href="<%= `/board/post-view/${p?.post_id}` %>">
                                <div class="btn_comment">
                                    <img src="/public/images/comment_icon.png" alt="댓글">
                                    <p>100</p>
                                </div>
                            </a>
                            <a href="<%= `/board/post-view/${p?.post_id}` %>">
                                <div class="btn_grade">
                                    <img src="/public/images/grade_icon.png" alt="별점">
                                    <p><%= p?.grade %></p>
                                </div>
                            </a>
                        </div>
                    </div>
                </a>
            </div>
            <%} %>
        </div>
        <% } %>
    </div>
</div>