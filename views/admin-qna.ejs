  </div>
  <div class="main-contents">
    <div class="subject">문의 내역</div>
    <div>
      <table class="qna-table-style">
        <thead>
          <tr>
            <th scope="cols">No.</th>
            <th scope="cols">회원명/회원아이디</th>
            <th scope="cols">문의내용</th>
            <th scope="cols">구분</th>
          </tr>
        </thead>
        <% qna.forEach(qna=>{ %>
        <tbody>
          <tr>
            <td scope="row">
              <%= qna.qna_id %>
            </td>
            <td>
              <span><%= qna.name %></span>
              <span>/</span>
              <span><%= qna.user_id %></span>
            </td>
            <td>
              <a href="<%= `/admin/qna/response/${qna.qna_id}`%>"><%= qna.question %></a>
            </td>
            <td>
              <% if (qna.answer) { %>
                  답변완료
              <% } else { %>
                <a href="<%= `/admin/qna/response/${qna.qna_id}`%>"  class="qna-answer-waiting">답변대기</a>
              <% }; %>
            </td>
          </tr>
        </tbody>
        <% }); %>
      </table>
    </div>
  </div>
